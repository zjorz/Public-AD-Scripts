<?xml version="1.0" encoding="utf-8"?>
<resetKrbTgtPassword xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<!-- Use The Connection Parameters In The XML Config File - TRUE OR FALSE -->
	<useXMLConfigFileSettings>FALSE</useXMLConfigFileSettings>

	<!-- =================================================================== GENERIC SECTION =================================================================== -->
	<!-- Default In Script = 500 | When Checking If The Host Is Reachable Over Certain Port, This Is The Timeout In Milliseconds -->
	<connectionTimeoutInMilliSeconds>500</connectionTimeoutInMilliSeconds>

	<!-- Default In Script = 3600 | The Waiting Interval Between Each Run When Running Mode Of Operation 7. This Is The Interval In Seconds -->
	<goldenTicketMonitorWaitingIntervalBetweenRunsInSeconds>3600</goldenTicketMonitorWaitingIntervalBetweenRunsInSeconds>

	<!-- Default In Script = 172800 | The Duration The Script Monitors For Failed Kerberos Tickets Requests When Running Mode Of Operation 7. This Is The Duration In Seconds -->
	<goldenTicketMonitoringPeriodInSeconds>172800</goldenTicketMonitoringPeriodInSeconds>
	<!-- =================================================================== GENERIC SECTION =================================================================== -->

	<!-- =================================================================== PASSWORD RESET ROUTINE SECTION =================================================================== -->
	<!-- Whether Or Not The Password Reset Routine Is Enabled - TRUE OR FALSE -->
	<resetRoutineEnabled>FALSE</resetRoutineEnabled>

	<!-- Password Reset Routine - Interval In Days After Last PwdLastSet For 1st Password Reset Action - Lowest Acceptable Value Is 3 -->
	<resetRoutineFirstResetIntervalInDays>25</resetRoutineFirstResetIntervalInDays>

	<!-- Password Reset Routine - Interval In Days After Last PwdLastSet For 2nd Password Reset Action - Lowest Acceptable Value Is 1 -->
	<resetRoutineSecondResetIntervalInDays>5</resetRoutineSecondResetIntervalInDays>

	<!-- Password Reset Routine - Attribute To Use For Reset State - Value '0' = Ready To Start, Value '1' = Reset Action 1 Completed, Value '2' = Reset Action 2 Completed -->
	<resetRoutineAttributeForResetState>extensionAttribute2</resetRoutineAttributeForResetState>

	<!-- Password Reset Routine - Attribute To Use For Reset Date Action 1 - Date Format Within Attribute = yyyyMMddHHmmss-->
	<resetRoutineAttributeForResetDateAction1>extensionAttribute3</resetRoutineAttributeForResetDateAction1>

	<!-- Password Reset Routine - Attribute To Use For Reset Date Action 2 - Date Format Within Attribute = yyyyMMddHHmmss-->
	<resetRoutineAttributeForResetDateAction2>extensionAttribute4</resetRoutineAttributeForResetDateAction2>
	<!-- =================================================================== PASSWORD RESET ROUTINE SECTION =================================================================== -->

	<!-- =================================================================== SEND MAIL SECTION =================================================================== -->
	<!-- Whether Or Not Send Mail Is Enabled - TRUE OR FALSE -->
	<sendMailEnabled>FALSE</sendMailEnabled>


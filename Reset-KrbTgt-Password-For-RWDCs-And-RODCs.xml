		<smtpCredsUserName><USERNAME OR MAIL ADDRESS></smtpCredsUserName>
		<smtpCredsPassword><PASSWORD></smtpCredsPassword>
	-->

	<!-- FQDN Of The Mail Server Or Mail Relay -->
	<!-- <smtpServer>smtp.gmail.com</smtpServer> -->
	<smtpServer>REPLACE_ME_SEE_EXAMPLES</smtpServer>

	<!-- SMTP Port To Use -->
	<smtpPort>REPLACE_ME_SEE_EXAMPLES</smtpPort>

	<!-- SMTP Credentials To Use - UserName/Password -->
	<smtpCredsType>REPLACE_ME_SEE_EXAMPLES</smtpCredsType>
	<smtpCredsUserName>REPLACE_ME_SEE_EXAMPLES</smtpCredsUserName>
	<smtpCredsPassword>REPLACE_ME_SEE_EXAMPLES</smtpCredsPassword>

	<!-- Mail Subject To Use -->
	<mailSubject>REPLACE_ME</mailSubject>

	<!-- The Priority Of The Message: Low, Normal, High -->
	<mailPriority>High</mailPriority>

